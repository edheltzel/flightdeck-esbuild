{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    },
    "globals": ["$", "_", "externalVariable"]
  },
	"css":{
		"formatter":{
			"enabled": true,
			"lineWidth": 120
		},
		"linter":{
			"enabled": true
		}
	},
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.json", "**/*.css"]
  },
  "overrides": [
    {
      "includes": ["./node_modules/**", "./.vscode/**", "./.cache/**", "./.jampack/**", "./_site/**", "./dist/**", "**/*.map.*", "./package.json", "./*rc*.json"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    }
  ]
}
